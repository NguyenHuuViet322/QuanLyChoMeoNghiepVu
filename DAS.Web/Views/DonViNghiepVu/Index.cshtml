@{
    var title = $"Danh sách {Model.TenPhanLoai}";
    ViewData["Title"] = title;
    var breadcrum = new Dictionary<string, string>();
    breadcrum.Add("/InputInfo", title);

    ViewBag.Breadcrumb = new List<string> { $"Danh sách {Model.TenPhanLoai}", title };
    ViewData["PageHeaderContent"] = "InputInfo";
    Layout = "~/Views/Shared/_LayoutCus.cshtml";
}
@using ESD.Application.Enums.DasKTNN;
@using ESD.Application.Models.ViewModels.ESDNghiepVu
@using ESD.Domain.Models.ESDNghiepVu
@using ESD.Utility.Helper;
@using ESD.Utility;
@using Microsoft.AspNetCore.Mvc.Rendering;
@model VMIndexDonViNghiepVu
@{
    var searchParam = Model.SearchParam;

    var lstPhanLoai = Utils.EnumToDic<PhanLoaiDonVi>().Select(n => new SelectListItem
            {
                Text = n.Value.ToString(),
                Value = n.Key.ToString(),
                Selected = n.Key == Model.SearchParam.PhanLoai
            }).ToList();
}
<div class="container pt-30">
    <div class="box-wrap-cs mb-15 dataTables_wrapper">
        <form asp-action="SearchByCondition" id="frmDonViNghiepVu" role="form" method="post" class="quickSearch" data-target="#divDonViNghiepVus">
            <div class="row row-ip">
                <div class="col-md-4 align-items-center d-flex col-ip-12">
                    <p class="is-header-table-search"><span>@ViewData["Title"]</span></p>
                </div>
                <div class="col-md-8 col-ip-12">
                    <div class="pull-right input-group-sm mb-3">

                        <div class="form-group w-200 pr-2">
                            @Html.CusDropdownListSelect2("", "PhanLoai", "--Chọn loại đơn vị--", lstPhanLoai, new { @class = "select2 w-200", @data_placeholder = "--Chọn loại đơn vị--" })
                        </div>
                        <div class="form-group w-200 pr-2">
                            @Html.CustTexBox("srKeyword", "Keyword", searchParam.Keyword, "Từ khóa", "Tên/mã "+ Model.TenPhanLoai, false, new { }, false)
                        </div>

                        @*<button class="btn btn-sm ml-5" type="button" id="dataFilter_Dropdown" title="Tìm kiếm nâng cao" style="background-color: #eef2f5; border-radius: 6px;">
                        <i class="fa fa-filter" style="color: #5e6278"></i>
                        </button> *@

                        <button type="submit" class="btn btn-sm btn-primary ml-5">Tìm kiếm</button>

                        <a class="btn-icon-search quickDeletes ml-28 text-danger actMultiTicks hidden" data-url="/DonViNghiepVu/Deletes" tabindex="0" data-comfirm-message="Xoá nhiều @Model.TenPhanLoai: Bạn có muốn xoá {n} @Model.TenPhanLoai đã chọn?" title="Xóa">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                        <a class="btn-icon-search quickUpdate ml-5 text-success" tabindex="0" href="/DonViNghiepVu/Create?PhanLoai=@(Model.SearchParam.PhanLoai)" data-target="#mdIUDonViNghiepVu" aria-controls="data_table" title="Thêm mới">
                            <i class="fas fa-plus"></i>
                        </a>
                        <a class="btn-icon-search quickExport ml-5 text-success" tabindex="0" href="#" action="/DonViNghiepVu/Export" data-target="#frmDonViNghiepVu" aria-controls="data_table" title="Xuất file">
                            <i class="bid-icons bid-icon-csv"></i>
                        </a>
                    </div>
                </div>

                @*<div class="dropdown-menu dataFilter_Dropdown_target">
                    <div class="dropdown-menu-content">
                        <a href="#" title="Đóng" class="dataFilter_Dropdown_close"><i class="fa fa-times-circle"></i></a>
                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-md-3 DropdownFilter_item">
                                    @Html.CustTexBox("srKeyword", "Keyword", @searchParam.Keyword, "Từ khóa cần tìm kiếm", "Từ khóa", false, new { }, false)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>*@
            </div>
        </form>
        <div class="card card-danger card-outline card-outline-tabs rounded-0 border-0 elevation-0 bg-transparent mt-15">
            <div class="card-body p-0">
                <div id="divDonViNghiepVus">
                    @await Html.PartialAsync("Index_DonViNghiepVus", Model)
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <div class="modal fade" id="mdIUDonViNghiepVu" aria-labelledby="DonViNghiepVuModalTitle" aria-hidden="true"></div>
    <script src="~/js/controller/DonViNghiepVuController.js" asp-append-version="true"></script>
    <script type="text/javascript">
        InitDonViNghiepVu();
    </script>

}


