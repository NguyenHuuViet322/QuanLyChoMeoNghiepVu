@using ESD.Application.Enums.DasKTNN;
@using ESD.Application.Models.ViewModels.ESDNghiepVu;
@model VMIndexDonViNghiepVu
@{
    int stt = Model.DonViNghiepVus.PageSize * (Model.DonViNghiepVus.PageIndex - 1);
    var pageSizes = new[] { 10, 20, 30, 50, 100 };
}

<div class="table-responsive">
    <table class="table table-borderless table-space table-hover dataTable dtr-inline useTreegrid table-bid-custom" role="grid" data-tree="3">
        <thead class="thead-light">
            <tr class="elevation-1">
                <th class="col-min" rowspan="2">STT</th>
                <th class="text-center col-min" rowspan="2">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="group-checkable custom-control-input" id="checkall" value="">
                        <label class="custom-control-label" for="checkall"></label>
                    </div>
                </th>
                <th class="m-w-100-px" rowspan="2">Mã @Model.TenPhanLoai</th>
                <th class="m-w-200-px" rowspan="2">Tên @Model.TenPhanLoai</th>
                <th class="m-w-200-px" rowspan="2">Địa chỉ</th>
                <th class="pl-2 m-w-200-px text-center" colspan="2">Lãnh đạo đơn vị</th>
                <th class="pl-2 m-w-200-px text-center" colspan="2">Lãnh đạo phụ trách TT</th>
                <th class="pl-2 m-w-200-px text-center" colspan="2">Đội trưởng</th>
                <th class="pl-2 m-w-200-px text-center" colspan="2">Đội phó</th>
                <th class="m-w-50-px text-center" rowspan="2">Số ĐVNV</th>
                <th class="m-w-50-px text-center" rowspan="2">Số cán bộ</th>
                <th class="m-w-70-px text-center" rowspan="2">Số cơ sở vật chất</th>
                <th class="col-min text-center" rowspan="2">Thao tác</th>
            </tr>
            <tr>
                <th style="text-align:center;">Tên cán bộ</th>
                <th style="text-align:center;">Số điện thoại</th>
                <th style="text-align:center;">Tên cán bộ</th>
                <th style="text-align:center;">Số điện thoại</th>
                <th style="text-align:center;">Tên cán bộ</th>
                <th style="text-align:center;">Số điện thoại</th>
                <th style="text-align:center;">Tên cán bộ</th>
                <th style="text-align:center;">Số điện thoại</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.DonViNghiepVus)
            {
                stt++;
                var editLink = $"/DonViNghiepVu/Edit?id={item.ID}";
                var exportLink = $"/DonViNghiepVu/ExportReport?id={item.ID}";
                var viewCSVC = $"/CoSoVatChat?IDDoiTuongSuDung={item.ID}";
                var viewDVNV = $"/DongVatNghiepVu?IDDonViQuanLy={item.ID}";
                var viewCB = $"/ThongTinCanBo?IDDonViNghiepVu={item.ID}";
                <tr>
                    <td class="text-center">@stt</td>
                    <td class="text-center">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="checkboxes custom-control-input" id="role-@item.ID" data-id="@item.ID" value="@item.ID">
                            <label class="custom-control-label" for="role-@item.ID"></label>
                        </div>
                    </td>

                    <td>@item.Code</td>
                    <td>@item.Ten</td>
                    <td>@item.DiaChi</td>

                    <td style="text-align:center;">@item.LanhDaoDonVi</td>
                    <td style="text-align:center;">@item.Sdt_LanhDaoDonVi</td>

                    <td style="text-align:center;">@item.LanhDaoPhuTrachTT</td>
                    <td style="text-align:center;">@item.Sdt_LanhDaoPhuTrachTT</td>

                    <td style="text-align:center;">@item.DoiTruong</td>
                    <td style="text-align:center;">@item.Sdt_DoiTruong</td>

                    <td style="text-align:center;">@item.DoiPho</td>
                    <td style="text-align:center;">@item.Sdt_DoiPho</td>

                    <td>
                        <a class="dataLink" href="@viewDVNV">
                            <div style="text-align:center;">
                                @item.SoDongVatNghiepVu
                            </div>
                        </a>
                    </td>
                    <td>
                        <a class="dataLink" href="@viewCB">
                            <div style="text-align:center;">
                                @item.SoCanBo
                            </div>
                        </a>
                    </td>
                    <td>
                        <a class="dataLink" href="@viewCSVC">
                            <div style="text-align:center;">
                                @item.SoCSVC
                            </div>
                        </a>
                    </td>

                    <td class="text-center">
                        <div class="d-flex is-btn-action">
                            <a title="Sửa" class=" quickUpdate" href="@editLink"
                           data-target="#mdIUDonViNghiepVu" data-toggle="tooltip" data-original-title="Sửa">
                                <i class="fas fa-fw fa-edit"></i>
                            </a>
                            <a title="Xuất báo cáo" class="" href="@exportLink"
                           data-target="#mdIUDonViNghiepVu" data-toggle="tooltip" data-original-title="Xuất báo cáo">
                                <i class="fas fa-fw fa-file-excel"></i>
                            </a>
                            <a title="Xoá" data-comfirm-message="Xoá @Model.TenPhanLoai: Bạn có chắc chắn muốn xoá @Model.TenPhanLoai này?" class=" quickDelete" href="/DonViNghiepVu/Delete?id=@item.ID" data-id="@item.ID"
                           data-toggle="tooltip" data-original-title="Xóa">
                                <i class="fas fa-fw fa-trash-alt"></i>
                            </a>
                        </div>
                </tr>
            }

        </tbody>
    </table>
</div>

@await Html.PartialAsync("_PagingFooter", Model.DonViNghiepVus, new ViewDataDictionary(this.ViewData) { { "TargetForm", "frmDonViNghiepVu" } })