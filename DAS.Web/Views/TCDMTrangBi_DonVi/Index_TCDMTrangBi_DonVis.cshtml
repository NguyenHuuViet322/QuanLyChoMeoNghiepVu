@using ESD.Application.Models.ViewModels.ESDNghiepVu;
@model VMIndexTCDMTrangBi_DonVi
@{
    int stt = Model.TCDMTrangBi_DonVis.PageSize * (Model.TCDMTrangBi_DonVis.PageIndex - 1);
    var pageSizes = new[] { 10, 20, 30, 50, 100 };
}
<div class="table-responsive">
    <table class="table table-borderless table-space table-hover dataTable dtr-inline useTreegrid table-bid-custom" role="grid" data-tree="3">
        <thead class="thead-light">
            <tr class="elevation-1">
                <th class="pb-2 col-min">STT</th>

                <th class="text-center col-min">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="group-checkable custom-control-input" id="checkall" value="">
                        <label class="custom-control-label" for="checkall"></label>
                    </div>
                </th>
                <th class="pb-2 m-w-200-px">DanhMucDinhMuc</th>
                <th class="pb-2 m-w-200-px">MaPhong</th>
                <th class="pb-2 col-min text-center">Thao tác</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.TCDMTrangBi_DonVis)
            {
                stt++;
                var editLink = $"/TCDMTrangBi_DonVi/Edit?id={item.ID}";
                <tr>
                    <td class="text-center">@stt</td>
                    <td class="text-center">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="checkboxes custom-control-input" id="role-@item.ID" data-id="@item.ID" value="@item.ID">
                            <label class="custom-control-label" for="role-@item.ID"></label>
                        </div>
                    </td>

                    <td>@item.DanhMucDinhMuc</td>
                    <td>@item.MaPhong</td>

                    <td class="text-center">
                        <div class="d-flex is-btn-action">
                            <a title="Sửa" class=" quickUpdate" href="@editLink"
                           data-target="#mdIUTCDMTrangBi_DonVi" data-toggle="tooltip" data-original-title="Sửa">
                                <i class="fas fa-fw fa-edit"></i>
                            </a>
                            <a title="Xoá" data-comfirm-message="Xoá tcdmtrangbi_donvi: Bạn có chắc chắn muốn xoá tcdmtrangbi_donvi này?" class=" quickDelete" href="/TCDMTrangBi_DonVi/Delete?id=@item.ID" data-id="@item.ID"
                           data-toggle="tooltip" data-original-title="Xóa">
                                <i class="fas fa-fw fa-trash-alt"></i>
                            </a>
                        </div>
                </tr>
            }

        </tbody>
    </table>
</div>

@await Html.PartialAsync("_PagingFooter", Model.TCDMTrangBi_DonVis, new ViewDataDictionary(this.ViewData) { { "TargetForm", "frmTCDMTrangBi_DonVi" } })