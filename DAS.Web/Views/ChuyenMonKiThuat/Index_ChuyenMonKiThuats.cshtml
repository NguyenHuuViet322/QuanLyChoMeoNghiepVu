@using ESD.Application.Models.ViewModels.ESDNghiepVu;
@model VMIndexChuyenMonKiThuat
@{
    int stt = Model.ChuyenMonKiThuats.PageSize * (Model.ChuyenMonKiThuats.PageIndex - 1);
    var pageSizes = new[] { 10, 20, 30, 50, 100 };
}
<div class="table-responsive">
    <table class="table table-borderless table-space table-hover dataTable dtr-inline useTreegrid table-bid-custom" role="grid" data-tree="3">
        <thead class="thead-light">
            <tr class="elevation-1">
                <th class="pb-2 col-min">STT</th>
               
                <th class="text-center col-min">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="group-checkable custom-control-input" id="checkall" value="">
                        <label class="custom-control-label" for="checkall"></label>
                    </div>
                </th> 
                <th class="pb-2 m-w-100-px">Mã chuyên môn</th>
                <th class="pb-2 m-w-100-px">Tên chuyên môn kỹ thuật</th>
                <th class="pb-2 m-w-300-px">Mô tả</th>
                <th class="pb-2 col-min text-center">Chức năng</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.ChuyenMonKiThuats)
            {
                stt++;
                var editLink = $"/ChuyenMonKiThuat/Edit?id={item.ID}";
                <tr>
                    <td class="text-center">@stt</td>
                    <td class="text-center">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="checkboxes custom-control-input" id="role-@item.ID" data-id="@item.ID" value="@item.ID">
                            <label class="custom-control-label" for="role-@item.ID"></label>
                        </div>
                    </td>
                    
                    <td>@item.Code</td>
                    <td>@item.Ten</td>
                    <td>@item.MoTa</td>
                    
                    <td class="text-center">
                        <div class="d-flex is-btn-action">
                            <a title="Sửa" class=" quickUpdate" href="@editLink"
                           data-target="#mdIUChuyenMonKiThuat" data-toggle="tooltip" data-original-title="Sửa">
                                <i class="fas fa-fw fa-edit"></i>
                            </a>
                            <a title="Xoá" data-comfirm-message="Xoá danh mục chuyên môm kỹ thuật: Bạn có chắc chắn muốn xoá danh mục chuyên môm kỹ thuật này?" class=" quickDelete" href="/ChuyenMonKiThuat/Delete?id=@item.ID" data-id="@item.ID"
                           data-toggle="tooltip" data-original-title="Xóa">
                                <i class="fas fa-fw fa-trash-alt"></i>
                            </a>
                        </div>
                </tr>
            }

        </tbody>
    </table>
</div>

@await Html.PartialAsync("_PagingFooter", Model.ChuyenMonKiThuats, new ViewDataDictionary(this.ViewData) { { "TargetForm", "frmChuyenMonKiThuat" } })